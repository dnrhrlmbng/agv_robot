<?xml version="1.0"?>
<robot name="robot_3d" xmlns:xacro="http://www.ros.org/wiki/xacro" xmlns:gz="http://gazebosim.org/schema">

    <xacro:property name="M_PI" value="3.1415926535897931" />
    <xacro:property name="mesh_pkg" value="agv_robot_description"/> 
    <xacro:property name="mesh_name" value="meshes/agv.stl"/>

    <xacro:arg name="robot_name" default="robot_3d"/>
    <xacro:arg name="prefix" default=""/>
    <xacro:arg name="use_gazebo" default="false"/>

    <xacro:include filename="$(find agv_robot_description)/urdf/control/agv_robot.gazebo"/>
    <xacro:include filename="$(find agv_robot_description)/urdf/sensors/rgbd_camera_front.urdf.xacro"/>
    <xacro:include filename="$(find agv_robot_description)/urdf/sensors/rgbd_camera_back.urdf.xacro"/>
    <xacro:include filename="$(find agv_robot_description)/urdf/sensors/rgbd_camera_right.urdf.xacro"/>
    <xacro:include filename="$(find agv_robot_description)/urdf/sensors/rgbd_camera_left.urdf.xacro"/>

    <link name="base_link">
        <visual>
            <material name="Grey">
                <color rgba="${255/255} ${127/255} ${2/255} 1.0"/>
            </material>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://${mesh_pkg}/${mesh_name}" scale="0.1 0.1 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://${mesh_pkg}/${mesh_name}" scale="0.1 0.1 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="50.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
        </inertial>
    </link>

    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.03 0.03 0.03"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 0.3"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent link="base_link"/>
      <child link="camera_link"/>
      <origin xyz="0.0 -0.012 0.46" rpy="0 0 0"/>
    </joint>

    <link name="back_caster_link">
      <visual>
        <geometry>
          <sphere radius="0.015"/>
        </geometry>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </visual>

      <collision>
        <geometry>
          <sphere radius="0.015"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.00001"/>
        <inertia
          ixx="0.00001" ixy="0.0" ixz="0.0"
          iyy="0.00001" iyz="0.0"
          izz="0.00001"/>
      </inertial>
    </link>

    <joint name="back_caster_joint" type="fixed">
      <parent link="base_link"/>
      <child link="front_caster_link"/>
      <origin xyz="-0.4 0 0.0" rpy="0 0 0"/>
    </joint>

    <link name="front_caster_link">
      <visual>
        <geometry>
          <sphere radius="0.015"/>
        </geometry>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </visual>

      <collision>
        <geometry>
          <sphere radius="0.015"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.00001"/>
        <inertia
          ixx="0.00001" ixy="0.0" ixz="0.0"
          iyy="0.00001" iyz="0.0"
          izz="0.00001"/>
      </inertial>
    </link>

    <joint name="front_caster_joint" type="fixed">
      <parent link="base_link"/>
      <child link="back_caster_link"/>
      <origin xyz="0.25 0 0" rpy="0 0 0"/>
    </joint>

    <link name="left_wheel">
    <visual>
        <origin xyz="0 0 0" rpy="1.561 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.082"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="1.561 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.082"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.5"/> 
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    </link>

    <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.155 0.066" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel">
    <visual>
        <origin xyz="0 0 0" rpy="1.561 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.082"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="1.561 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.082"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.5"/> 
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.188 0.066" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    </joint>
    
    <xacro:rgbd_camera_front
      prefix="$(arg prefix)"
      camera_name="cam_front"
      xyz_offset="0.105 -0.0 0.0"
      rpy_offset="0 0 0"/>

    <xacro:rgbd_camera_back
      prefix="$(arg prefix)"
      camera_name="cam_back"
      xyz_offset="-0.105 0.0 0.0"
      rpy_offset="0 0 3.13"/>

    <xacro:rgbd_camera_left
      prefix="$(arg prefix)"
      camera_name="cam_left"
      xyz_offset="-0 -0.112 0.0"
      rpy_offset="0 0 -1.57 "/>

    <xacro:rgbd_camera_right
      prefix="$(arg prefix)"
      camera_name="cam_right"
      xyz_offset="-0 0.112 0.0"
      rpy_offset="0 0 1.57 "/>

    <gazebo reference="base_link">
      <mu1>0.000002</mu1>
      <mu2>0.000002</mu2>
    </gazebo>
    
</robot>
